  <h4><strong>いいねランキング</strong></h4>
</div>
<div class="container">
  <div class="row row-cols-3 mx-5">
    <% @all_ranks.each.with_index(1) do |item, i| %>
      <div class="card-deck">
        <div class="card border-white mt-3">
          <%= link_to image_tag(item.image, class:"card-img", width:"400", height:"400"), item_path(item.id), method: :get %>
          <div class="card-img-underlay">
            <h3 class="card-title">第<%= i %>位</h3>
            <h3 class="card-title mx-4">👍<%= item.liked_users.count %></h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

