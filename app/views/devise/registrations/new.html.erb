<div class="text-left m-5">
    <h1>新規登録画面</h1>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>


  <div class="form-group ">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true, class:"form-control", placeholder:"ニックネームを入力してください" %>
    <small id="emailHelp" class="form-text text-muted">Please enter your nickname.</small>
  </div>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control", placeholder:"Emailを入力してください" %>
    <small id="emailHelp" class="form-text text-muted">Please enter your Email.</small>
  </div>
  <div class="form-group">
    <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上の入力をしてください)</em>
        <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"パスワードを入力してください" %>
    <small id="emailHelp" class="form-text text-muted">Please enter your Password.</small>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"もう一度パスワードを入力してください" %>
    <small id="emailHelp" class="form-text text-muted">Please enter your Password again.</small>
  </div>
 
 <%= f.submit "新規登録する", class:"btn btn-primary" %>
  <% end %>
</div>
